#!/usr/bin/env bash
# Script to display subdomain information

display_subdomain_info() {
    local domain=$1
    local subdomain=$2
    local full_domain="${subdomain}.${domain}"
    
    # Use dig to get the DNS information and awk to parse it
    dig_output=$(dig "$full_domain" +short)
    
    if [ -z "$dig_output" ]; then
        echo "The subdomain $subdomain is not configured"
        return
    fi
    
    # Determine record type (A by default for this task)
    record_type="A"
    destination=$(echo "$dig_output" | awk 'NR==1{print $1}')
    
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

main() {
    if [ $# -lt 1 ]; then
        echo "Usage: $0 domain [subdomain]"
        exit 1
    fi
    
    domain=$1
    subdomain=$2
    
    if [ -z "$subdomain" ]; then
        # Display info for default subdomains in order
        for sd in www lb-01 web-01 web-02; do
            display_subdomain_info "$domain" "$sd"
        done
    else
        display_subdomain_info "$domain" "$subdomain"
    fi
}

main "$@"