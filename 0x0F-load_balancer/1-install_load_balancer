#!/usr/bin/env bash
# Installs and configures HAProxy to load balance between web-01 and web-02 using roundrobin

# Update and install HAProxy
apt-get update -y
apt-get install -y haproxy

# Enable HAProxy via default config
echo "ENABLED=1" > /etc/default/haproxy

# Backup original config file
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Configure HAProxy (replace with your actual IPs)
cat <<EOF > /etc/haproxy/haproxy.cfg
global
    log /dev/log    local0
    log /dev/log    local1 notice
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

listen http_front
    bind *:80
    mode http
    option httpclose
    option forwardfor
    balance roundrobin
    server 03-web-01 44.200.83.158:80 check
    server 03-web-02 3.237.16.226:80 check
EOF

# Restart HAProxy
systemctl restart haproxy