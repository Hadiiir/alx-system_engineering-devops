#!/usr/bin/env bash
# Installs and configures nginx web server to serve 'Hello World!'

# Update package lists
sudo apt-get -y update

# Install nginx non-interactively
sudo apt-get -y install nginx

# Create proper HTML file in correct location
sudo mkdir -p /var/www/html
echo 'Hello World!' | sudo tee /var/www/html/index.html >/dev/null

# Configure Nginx to serve from correct root
sudo bash -c 'cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html;
    server_name _;
    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF'

# Ensure proper permissions
sudo chown -R www-data:www-data /var/www/html
sudo chmod -R 755 /var/www/html

# Configure firewall
echo "y" | sudo ufw enable
sudo ufw allow 'Nginx HTTP'

# Restart and enable Nginx
sudo systemctl restart nginx
sudo systemctl enable nginx

# Verify installation by outputting HTTP status code
curl -s -o /dev/null -w "%{http_code}" http://localhost