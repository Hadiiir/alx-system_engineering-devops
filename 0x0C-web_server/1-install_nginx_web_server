#!/usr/bin/env bash
# Installs and configures nginx to display "Hello World!" at the root URL

# Update and install nginx
apt-get update -y
apt-get install -y nginx

# Start nginx using service (not systemctl)
service nginx start

# Write "Hello World!" to the index file
echo "Hello World!" > /var/www/html/index.html

# Ensure port 80 is open (if ufw is installed and active)
if command -v ufw >/dev/null 2>&1; then
  ufw allow 'Nginx HTTP'
fi